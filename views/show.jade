block content
doctype html
html
  head
    title=post.title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto|Quicksand')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/show.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js')
    script(src='/scripts/show.js')

  body(data-spy='scroll')
    .container
      a.page-scroll.back-to-top(href='.whitespace')
      .whitespace
      .header(style="background-image: linear-gradient(rgba(0,0,0,0.25),rgba(0,0,0,0.25)), url('/images/uploads/#{post.mainimage}');")
        .row.navbar-row
          .social-icons
            a(href="#")
              i.fa.fa-facebook.social-button
            a(href="#")
              i.fa.fa-google-plus.social-button
            a(href="#")
              i.fa.fa-twitter.social-button
            a(href="#")
              i.fa.fa-get-pocket.social-button
            a(href="#")
              i.fa.fa-linkedin.social-button
          nav.navbar.navbar-default.navbar-transparent.navbar-fixed-top(role='navigation')
            .navbar-header
              button#dropdown.navbar-toggle(type='button', data-toggle='collapse', data-target='#example-navbar-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.page-scroll.navbar-logo(href='.home')
                img.navbar-img(src='/images/logo.svg')
            #example-navbar-collapse.collapse.navbar-collapse.navbar-color(style='width : 100%;')
              ul.nav.navbar-nav.navbar-right.main-nav
                li
                  a.page-scroll(href='/') Home
                li
                  a.page-scroll.blog-hyperlink(href='.post') Blog
                li
                  a.page-scroll(href='.testimonials') About
                li
                  a.page-scroll.blog-hyperlink(href='.blog') Gallery
                li
                  a.page-scroll(href='.form') Contact
                li.desktop-mode(style="padding-right: 0")
                  form.searchbox
                    input.searchbox-input(type="search" placeholder="Search......" name="search" onkeyup="buttonUp();" required)
                    input.searchbox-submit(type="submit" value="Go")
                    span.searchbox-icon
                      i.fa.fa-search(aria-hidden="true")
                li.mobile-mode(style="padding-right: 0")
                  .custom-search-input
                    form.input-group
                      input.search-query.form-control(type='search' placeholder='Search')
                      input.searchbox-mobile-submit(type="submit" value="Go")
                      span.input-group-btn
                        span.glyphicon.glyphicon-search
        .article-mask
        .article-caption=post.title
        .button-awesome
          a.page-scroll.btn.btn-half(href='.post') Read Article
      .post
        .container
          .article-content
            h1(style="font-size: 43px;")=post.title
            br
            br
            .row
              .col-md-6
                p.tags-title Tags: &nbsp
                if Array.isArray(post.category)
                  each tag, i in post.category
                    a.tags(href='.post') #{tag}
                else
                  a.tags(href='.post') #{post.category}

              .col-md-6
                if parseInt(moment.duration(moment(new Date()).diff(post.date)).asMinutes()) < 2
                  p.meta Posted #{parseInt(moment.duration(moment(new Date()).diff(post.date)).asMinutes())} minute ago
                else if parseInt(moment.duration(moment(new Date()).diff(post.date)).asMinutes()) < 60
                  p.meta Posted #{parseInt(moment.duration(moment(new Date()).diff(post.date)).asMinutes())} minutes ago
                else if parseInt(moment.duration(moment(new Date()).diff(post.date)).asMinutes()) > 60 && parseInt(moment.duration(moment(new Date()).diff(post.date)).asMinutes()) < 120
                  p.meta Posted #{parseInt(moment.duration(moment(new Date()).diff(post.date)).asHours())} hour ago
                else if parseInt(moment.duration(moment(new Date()).diff(post.date)).asHours()) < 24
                  p.meta Posted #{parseInt(moment.duration(moment(new Date()).diff(post.date)).asHours())} hours ago
                else if parseInt(moment.duration(moment(new Date()).diff(post.date)).asDays()) < 2
                  p.meta Posted #{parseInt(moment.duration(moment(new Date()).diff(post.date)).asDays())} day ago
                else
                  p.meta Posted #{parseInt(moment.duration(moment(new Date()).diff(post.date)).asDays())} days ago
            br
            br
            !=post.body
            br
            .row.likes-row
              a(href="javascript:void(0)" onclick="liked();")
                i.fa.fa-heart
                h3.likes-number &nbsp55
            hr
            .row
              .col-md-2(style="text-align: center")
                a(href="#")
                  img.profile-pic(src="/images/uploads/#{author[0].image}")
                br
                br
                a(href="#")
                  i.fa.fa-instagram.author-social(aria-hidden="true")
                a(href="#")
                  i.fa.fa-twitter.author-social(aria-hidden="true")
                a(href="#")
                  i.fa.fa-linkedin.author-social(aria-hidden="true")
              br
              .col-md-7
                p.author-name #{post.author}
                p.author-description #{author[0].body}
              .col-md-3.read-more-column
                a.read-more-button(href="#") Read More
      br
      br
      br
      h2.others-headline Other Interesting Stories
      br
      br
      .row
        .col-md-4
          .others
            .container
              .other-img
                img(src="/images/uploads/#{otherpost[0].mainimage}" align="center")
              .other-content
                h4 #{otherpost[0].title}
                if Array.isArray(otherpost[0].category)
                  each tag, i in otherpost[0].category
                    a.tags(href='.otherpost') #{tag}
                else
                  a.tags(href='.otherpost') #{otherpost[0].category}
                br
                br
                !=truncateText(otherpost[0].body, 200)
              .other-read-more
                a.other-read-more-button(href="#") Read More
              br
              br
          br
          br
          br
        if otherpost[1]
        .col-md-4
          .others
            .container
              .other-img
                img(src="/images/uploads/#{otherpost[1].mainimage}" align="center")
              .other-content
                h4 #{otherpost[1].title}
                if Array.isArray(otherpost[1].category)
                  each tag, i in otherpost[1].category
                    a.tags(href='.otherpost') #{tag}
                else
                  a.tags(href='.otherpost') #{otherpost[1].category}
                br
                br
                !=truncateText(otherpost[1].body, 200)
              .other-read-more
                a.other-read-more-button(href="#") Read More
              br
              br
          br
          br
          br
        if otherpost[2]
        .col-md-4
          .others
            .container
              .other-img
                img(src="/images/uploads/#{otherpost[2].mainimage}" align="center")
              .other-content
                h4 #{otherpost[2].title}
                if Array.isArray(otherpost[2].category)
                  each tag, i in otherpost[2].category
                    a.tags(href='.otherpost') #{tag}
                else
                  a.tags(href='.otherpost') #{otherpost[2].category}
                br
                br
                !=truncateText(otherpost[2].body, 200)
              .other-read-more
                a.other-read-more-button(href="#") Read More
              br
              br
          br
          br
          br

    footer
      .row
        .col-md-4
          h4.company-copyright &#169; 2017 Fiintech | All Rights Reserved
        .col-md-4
          a(href="#")
            i.fa.fa-instagram.footer-social(aria-hidden="true")
          a(href="#")
            i.fa.fa-twitter.footer-social(aria-hidden="true")
          a(href="#")
            i.fa.fa-linkedin.footer-social(aria-hidden="true")
        .col-md-4
          a(href="#")
            h4.questions Questions? Contact Us Now


